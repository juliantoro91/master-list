<component name="CheckboxItem" extends="Group">
    <script type="text/brightscript" uri="CheckboxItem.bs" />

    <interface>
        <field id="settings" type="assocArray" onChange="configureComponent" alwaysNotify="true" />
    </interface>

    <children>
        <Rectangle
            width="460"
            height="100"
            color="#b3b3b300" >
            <Label
                id="label"
                width="300"
                height="40"
                translation="[40, 30]"
                color="#D9D9D9"
                vertAlign="center" >
                <Font
                    uri="pkg:/fonts/Roboto-Bold.ttf"
                    size="24"
                    role="font" />
            </Label>
            <Rectangle
                width="40"
                height="40"
                translation="[380, 30]"
                color="#D9D9D9" >
                <Rectangle
                    id="unselected"
                    width="30"
                    height="30"
                    translation="[5, 5]"
                    color="#101214" />
            </Rectangle>
        </Rectangle>
    </children>
</component>