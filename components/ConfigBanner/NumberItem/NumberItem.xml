<component name="NumberItem" extends="Group">
    <script type="text/brightscript" uri="NumberItem.bs" />

    <interface>
        <field id="settings" type="assocArray" onChange="configureComponent" alwaysNotify="true" />
    </interface>

    <children>
        <Rectangle
            width="460"
            height="100"
            color="#b3b3b300" >
            <Label
                id="label"
                width="300"
                height="40"
                translation="[40, 30]"
                vertAlign="center" >
                <Font
                    uri="pkg:/fonts/Roboto-Bold.ttf"
                    size="24"
                    role="font" />
            </Label>
            <Rectangle
                width="80"
                height="60"
                translation="[340, 20]"
                color="#D9D9D9" >
                <Label
                    id="input"
                    width="70"
                    height="50"
                    translation="[5, 5]"
                    vertAlign="center"
                    horizAlign="right"
                    color="#101214">
                    <Font
                        uri="pkg:/fonts/Roboto-Bold.ttf"
                        size="32"
                        role="font" />
                </Label>
            </Rectangle>
        </Rectangle>
    </children>
</component>