<component name="BaseListItem" extends="Group">
    <script type="text/brightscript" uri="BaseListItem.bs" />

    <interface>
        <field id="itemContent" type="node" onChange="onContentSet" alwaysNotify="true" />
        <field id="itemHasFocus" type="boolean" onChange="onItemHasFocus" />
        <field id="focusPercent" type="float" onChange="onFocusPercentChange" />
    </interface>

    <children>
        <Rectangle
            id="background"
            width="120"
            height="240"
            color="#164574" >
            <Label
                id="label"
                width="120"
                height="240"
                color="#D5D5D5" >
                <Font
                    uri="pkg:/fonts/Roboto-Bold.ttf"
                    size="48"
                    role="font" />
            </Label>
        </Rectangle>
    </children>
</component>